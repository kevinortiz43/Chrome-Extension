{
  "name": "Accessibility Helper",
  "description": "Creates options for making websites more accessible",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/moon.png",
      "32": "/assets/moon.png", 
      "48": "/assets/moon.png",
      "128": "/assets/moon.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "16": "/assets/moon.png",
    "32": "/assets/moon.png",
    "48": "/assets/moon.png",
    "128": "/assets/moon.png"
  }
}