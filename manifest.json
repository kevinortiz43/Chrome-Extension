{
  "name": "Accessibility Helper",
  "description": "Creates options for making websites more accessible",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "/assets/moon.png"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["Content.js"]
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  }
}
